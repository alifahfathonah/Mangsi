<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="3dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    android:padding="15dp">

    <LinearLayout
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_pesanan_item"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_pesanan_status_1" />

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:id="@+id/rl_pesanan_judul_atas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pesanan_judul_tempat_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tempat Print" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_judul_tempat_print"
                        android:id="@+id/tv_pesanan_judul_berkas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berkas" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rl_pesanan_judul_atas_split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pesanan_judul_split_tempat_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_judul_split_tempat_print"
                        android:id="@+id/tv_pesanan_judul_split_berkas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rl_pesanan_isi_atas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pesanan_isi_tempat_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ode Print" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_isi_tempat_print"
                        android:id="@+id/tv_pesanan_isi_berkas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan_praktikum.docx" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:id="@+id/rl_pesanan_judul_bawah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pesanan_judul_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_judul_status"
                        android:id="@+id/tv_pesanan_judul_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_judul_harga"
                        android:id="@+id/tv_pesanan_judul_pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pembayaran" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="13dp"
                    android:id="@+id/rl_pesanan_judul_bawah_split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pesanan_judul_split_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_judul_split_status"
                        android:id="@+id/tv_pesanan_judul_split_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_judul_split_harga"
                        android:id="@+id/tv_pesanan_judul_split_pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rl_pesanan_isi_bawah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pesanan_isi_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sedang Dicetak" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_isi_status"
                        android:id="@+id/tv_pesanan_isi_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 10.500" />

                    <TextView
                        android:layout_below="@+id/tv_pesanan_isi_harga"
                        android:id="@+id/tv_pesanan_isi_pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer Bank" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>